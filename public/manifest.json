        }
      ]
    },
    {
      "name": "Clock In/Out",
      "short_name": "Clock",
      "description": "Clock in or out for work",
      "url": "/mobile/time-tracking",
      "icons": [
        {
          "src": "/icons/shortcut-clock.png",
          "sizes": "96x96"
        }
      ]
